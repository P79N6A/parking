<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="ucc_menu_create_table" author="walkman">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ucc_menu"/>
            </not>
        </preConditions>
        <createTable tableName="ucc_menu" remarks="菜单表">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_menu"/>
            </column>
            <column name="tenantId" type="bigint(20)" remarks="租户ID"/>
            <column name="code" type="varchar(100)" remarks="菜单编码">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(100)" remarks="菜单名称">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="tinyint(4)" remarks="资源类型 1:菜单 2:按钮" defaultValue="1"/>
            <column name="url" type="varchar(255)" remarks="地址"/>
            <column name="component" type="varchar(256)" remarks="组建名称"/>
            <column name="icon" type="varchar(64)" remarks="图标"/>
            <column name="level" type="varchar(64)" remarks="层级深度"/>
            <column name="sort" type="smallint(6)" remarks="排序" defaultValue="0"/>
            <column name="parentId" type="bigint(20)" remarks="父节点"/>
            <column name="pathCode" type="varchar(255)" remarks="节点路径"/>
            <column name="staticMenu" type="tinyint(1)" remarks="是否静态菜单 1：是 0：否" defaultValue="0"/>
            <column name="shown" type="tinyint(1)" remarks="是否显示 1：显示 0：隐藏" defaultValue="0"/>
            <column name="permission" type="varchar(200)" remarks="权限标识"/>
            <column name="status" type="tinyint(4)" remarks="状态 0、禁用 1、正常" defaultValue="0"/>
            <column name="tenancyHostSide" type="tinyint(4)" remarks="租户或宿主" defaultValue="0"/>
            <column name="remarks" type="varchar(255)" remarks="备注"/>
            <column name="creatorUserId" type="bigint" remarks="创建者"/>
            <column name="creationTime" type="DATETIME" remarks="创建时间"/>
            <column name="lastModifierUserId" type="bigint" remarks="更新者"/>
            <column name="lastModificationTime" type="DATETIME" remarks="更新时间"/>
            <column name="deleterUserId" type="bigint" remarks="删除者"/>
            <column name="deletionTime" type="DATETIME" remarks="删除时间"/>
            <column name="deleted" type="tinyint(1)" remarks="删除标记" defaultValue="0"/>
        </createTable>
        <createIndex tableName="ucc_menu" indexName="idx_tenantId">
            <column name="tenantId"/>
        </createIndex>
        <createIndex tableName="ucc_menu" indexName="idx_code">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="ucc_menu" indexName="idx_parentId">
            <column name="parentId"/>
        </createIndex>
        <createIndex tableName="ucc_menu" indexName="idx_pathCode">
            <column name="pathCode"/>
        </createIndex>
        <createIndex tableName="ucc_menu" indexName="idx_staticMenu">
            <column name="staticMenu"/>
        </createIndex>
        <createIndex tableName="ucc_menu" indexName="idx_deleted">
            <column name="deleted"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>