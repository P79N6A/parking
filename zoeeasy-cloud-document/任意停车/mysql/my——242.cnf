# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.7/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[mysqld]

# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M

# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

# These are commonly set, remove the # and set as required.
#basedir = /usr/local/mysql
datadir = /var/lib/mysql/
port = 33306
server_id=242
# socket = .....
#user=mysql

wait_timeout=120
interactive_timeout=120
# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
join_buffer_size = 128M
sort_buffer_size = 8M
read_rnd_buffer_size = 8M 

character-set-server=utf8
max_connections=5000
sort_buffer_size=16M
query_cache_limit=1M
query_cache_size=16M
query_cache_type=1

#二进制日志相关参数
log-bin=mysql-bin
log-bin-index=mysql-bin.index
#innodb_file_per_table=1
binlog_format=row
#binlog-do-db=atlantis,teamcity,disconf,dubbox-monitor,lts,parking,sms,tcc,zb_pay,tingche
#binlog-do-db=disconf,dubbox-monitor,lts,parking,sms,teamcity,tingche
binlog-ignore-db=mysql
#binlog-checksum=CRC32
#binlog-rows-query-log-events=1

#Slave相关参数
skip-slave-start
relay_log_purge=0
relay-log=mysql-relay-bin
relay-log-index=mysql-relay-binindex

#Slave设置
relay_log_purge=0
read_only=1

#主从半同步相关参数
rpl_semi_sync_master_enabled=1
rpl_semi_sync_master_timeout=1000
rpl_semi_sync_slave_enable=1

sync_binlog=1
gtid_mode=ON

read_buffer_size=8M
#read_rnd_buffer_size=8M
open_files_limit=10240
#innodb_buffer_poo_size=1G
#innodb_buffer_pool_instance=8
innodb_flush_log_at_trx_commit=1

#innodb_log_buffer_size=8M
#back_log=1024
#thread_cache_size=64
#slow_query_log=ON
#key_buffer_size=512M
#lower_case_table_names=1

enforce-gtid-consistency=ON
log_slave_updates=1
#log-slave-updates=true
#master-info-repository=TABLE
#relay-log-info-repository=TABLE
#sync-master-info=1
#slave_parallel_workers=4
master-verify-checksum=1
slave-sql-verify-checksum=1

#sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES 

[mysqld_safe]
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid


