<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="walkman" id="up_parking_image_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="up_parking_image"/>
            </not>
        </preConditions>
        <createTable tableName="up_parking_image" remarks="过车停车图像表">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_parking_image"/>
            </column>
            <column name="parkingId" type="bigint" remarks="停车场ID">
                <constraints nullable="false"/>
            </column>
            <column name="bizType" type="CHAR(1)" remarks="业务类型  1.过车 2.停车 "/>
            <column name="bizId" type="bigint" remarks="业务ID,过车或者停车记录ID"/>
            <column name="imageUrl" type="VARCHAR(2000)" remarks="图像URL"/>
            <column name="dataOrigin" type="VARCHAR(255)" remarks="图片来源"/>
            <column name="creatorUserId" type="bigint" remarks="创建者"/>
            <column name="creationTime" type="DATETIME" remarks="创建时间"/>
            <column name="LastModifierUserId" type="bigint" remarks="更新者"/>
            <column name="LastModificationTime" type="DATETIME" remarks="更新时间"/>
            <column name="deleterUserId" type="bigint" remarks="删除者"/>
            <column name="deletionTime" type="DATETIME" remarks="删除时间"/>
            <column name="deleted" type="CHAR(1)" remarks="删除标记"/>
        </createTable>
        <createIndex tableName="up_parking_image" indexName="idx_parkingId">
            <column name="parkingId"></column>
        </createIndex>
        <createIndex tableName="up_parking_image" indexName="idx_bizId">
            <column name="bizId"></column>
        </createIndex>
        <createIndex tableName="up_parking_image" indexName="idx_bizType">
            <column name="bizType"></column>
        </createIndex>
        <rollback>drop table up_parking_image</rollback>
    </changeSet>
</databaseChangeLog>